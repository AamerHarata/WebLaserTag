
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Laser Tag Web server</h1>
    <p><a href="#">UT - Group 2 - Final Project</a>.</p>
    <div class="display-4" style="color: gray; font-size: 2.5rem"><p>The server is ready to receive data</p></div>
</div>
<hr/>
<div class="text-center"><button class="text-center btn btn-danger"onclick="location.href = '@Url.Action("DeleteData", "Home")'">Delete Everything</button></div>
<br/>
<div class="text-center" id="data-container">
    
</div>





@section Scripts
{
    <script>
        $(document).ready(function() {
            
            const gameId = $("#gameId").val();

            setInterval(function() { getData() }, 300);


            function getData() {
                $.ajax({
                    type: "GET",
                    url: "/LiveGame/",
                    success: function(response) {
                        $("#data-container").html(response);
                    }
                });
            }

        });
    </script>
}